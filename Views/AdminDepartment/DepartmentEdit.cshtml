@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Department Edit";
}

@model Asp.Net_MvcWeb_Pj3.Aptech.Models.Department

@* ràng buộc thẻ input vào entity class *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="ui container">
    <div class="ui segments">
        <div class="ui segment">
            <h5 class="ui header">
                <i class="icon plus"></i>Form Edit Department
            </h5>
        </div>
        <form method="post" action="/admin/Department/edit" class="ui form segment">

                <input type="hidden" name="Id" value="@Model.Id" />

                <p class="ui field">
                    <label>Name:</label>
                    <input type="text" name="Name" value="@Model.Name" />
                </p>

                

               

                <br class="clear_float">

             <div style="overflow: auto;">
                    <button class="ui button primary" type="submit" style="float: right"><i class="icon save"></i>Lưu</button>
                    <a href="/admin/Department/list" class="ui button primary" style="float: right"><i
                            class="icon list"></i>Danh Sách</a>
                </div>
        </form>

        
    </div>
</div>