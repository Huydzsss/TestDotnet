@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Employee Edit";
}

@model Asp.Net_MvcWeb_Pj3.Aptech.Models.Employee

@* ràng buộc thẻ input vào entity class *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="ui container">
    <div class="ui segments">
        <div class="ui segment">
            <h5 class="ui header">
                <i class="icon plus"></i>Form Edit Employee
            </h5>
        </div>
        <form method="post" action="/admin/Employ/edit" class="ui form segment">

                <input type="hidden" name="Id" value="@Model.Id" />

                <p class="ui field">
                    <label>Name:</label>
                    <input type="text" name="Name" value="@Model.Name" />
                </p>

                

                <p class="ui field">
                    <label>Salary ($):</label>
                    <input type="text" name="Salary" value="@Model.Salary" />
                </p>

                
                @* <input type="radio" name="Status" checked="@(Model?.Status)" value="1" /> <span>New</span>
                <input type="radio" name="Status" checked="@(!Model?.Status)" value="0" /> <span>Old</span> *@

                <p class="ui field">
                    <label>Status:</label>
                    <input type="checkbox" name="Status" value="true" checked="@(Model?.Status)" />
                </p>

                <p class="ui field">
                    <label>Joining Date:</label>
                    <input type="date" name="JoiningDate" value="@Model?.JoiningDateSQL" />
                </p>

                <p class="ui field">
                    <label>Department:</label>
                    @* <input type="text" value="1" name="DepartmentId"/> *@
                    <select name="DepartmentId">
                        @foreach (var pub in (ViewBag.DepartmentList as ICollection<Department>)!)
                        {
                            <option value="@pub.Id" selected=@(pub.Id == Model?.DepartmentId)>@pub.Name</option>
                        }
                    </select>
                </p>

                <br class="clear_float">

             <div style="overflow: auto;">
                    <button class="ui button primary" type="submit" style="float: right"><i class="icon save"></i>Lưu</button>
                    <a href="/admin/Employ/list" class="ui button primary" style="float: right"><i
                            class="icon list"></i>Danh Sách</a>
                </div>
        </form>

        <!-- <div class="ui segment">
            Segment Footer
        </div> -->
    </div>
</div>